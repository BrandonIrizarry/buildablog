<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/static/styles.css">
        <title>Archives</title>
    </head>
    <body>
        {{ template "nav.html" . }}
        <main>
            <ul>
                {{ range .Published }}
                    {{ if .Include }}
                    <li class="published">
                        <span class="created">{{ .CreatedHumanReadable }}: </span>
                        <a href="posts/{{ .Slug }}">
                            {{ .Title }}
                        </a>
                        {{  if (gt (len .Tags) 0) }}
                            <p>
                                {{ $numTags := (len .Tags) }}
                                {{ range $i, $tag := .Tags }}
                                    <a href="/archives?tag={{ $tag }}"><span class="tags">{{ $tag }}</span></a>{{ if (lt $i (dec $numTags)) }},{{ end }}
                                {{ end }}
                            </p>
                        {{ end }}
                        {{ if .DidUpdate }}
                            <p><span class="updated">Updated on {{ .UpdatedHumanReadable }}</span></p>
                        {{ end }}
                        <p class="summary">{{ .Summary }}</p>
                    </li>
                    {{ end }}
                {{ end }}
            </ul>
        </main>
    </body>
</html>
